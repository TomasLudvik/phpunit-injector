{
    "name": "zalas/phpunit-dependency-injection",
    "description": "Injects services from the Symfony dependency injection container to PHPUnit test cases",
    "type": "library",
    "require": {
        "php": "^7.1",
        "phpunit/phpunit": "^6.0||^7.0",
        "phpdocumentor/reflection-docblock": "^4.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "infection/infection": "^0.7.0",
        "symfony/dependency-injection": "^3.4 || ^4.0",
        "symfony/framework-bundle": "^3.4 || ^4.0",
        "tm/tooly-composer-script": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Zalas\\PHPUnit\\DependencyInjection\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zalas\\PHPUnit\\DependencyInjection\\Tests\\": "tests"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Zalas",
            "email": "jakub@zalas.pl"
        }
    ],
    "scripts": {
        "install-and-update-cmd": [
            "Tooly\\ScriptHandler::installPharTools"
        ],
        "post-install-cmd": [
            "@install-and-update-cmd"
        ],
        "post-update-cmd": [
            "@install-and-update-cmd"
        ]
    },
    "extra": {
        "tools": {
            "deptrac": {
                "url": "http://get.sensiolabs.de/deptrac.phar",
                "only-dev": true
            }
        }
    }
}
